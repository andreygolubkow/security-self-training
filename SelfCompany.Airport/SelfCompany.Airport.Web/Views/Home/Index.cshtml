@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid">
    <div class="row">
        <div class="col p-0">
            <div id="airport-carouser" class="carousel slide">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="airport-apron.png" class="d-block w-100 airport-photo" alt="Apron">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Welcome to TEKELI Airport</h5>
                            <p>Your journey begins here, and we're excited to have you with us.</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="airport-facade.png" class="d-block w-100 airport-photo" alt="Airport facade">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Our service</h5>
                            <p>Indulge in luxury and comfort at our airport business lounge – where productivity meets relaxation</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="airport-satellite.png" class="d-block w-100 airport-photo" alt="Airport satellite view">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>We wish you a pleasant flight</h5>
                            <p>Exciting times ahead for our village airport as we envision enhanced facilities, expanded runways, and improved services to connect our community with the world</p>
                        </div>
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#airport-carouser" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#airport-carouser" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    </div>
</div>
